<% if(successMsg && successMsg.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-2" role="alert">
        <h5 style="text-align: center; padding:0px ; margin: 0px;"><%= successMsg %></h5>
        <button type="button" class="btn-close btn-lg" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %> 

<% if(errorMsg && errorMsg.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-2" role="alert">
        <h5 style="text-align: center; padding:0px ; margin: 0px;"><%= errorMsg %></h5>
        <button type="button" class="btn-close btn-lg" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %> 